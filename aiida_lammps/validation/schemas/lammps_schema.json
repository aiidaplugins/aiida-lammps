{
    "id": "#root",
    "title": "LAMMPS AiiDA Run Parameters",
    "description": "AiiDA dictionary with the structure that will be transformed into a LAMMPS input",
    "type": "object",
    "propertyNames": {
        "enum": [
            "control",
            "potential",
            "structure",
            "compute",
            "minimize",
            "md",
            "fix",
            "thermo",
            "dump"
        ]
    },
    "control": {
        "type": "object",
        "properties": {
            "units": {
                "type": "string",
                "propertyNames": {
                    "enum": [
                        "si",
                        "metal",
                        "lj",
                        "real",
                        "cgs",
                        "electron",
                        "micro",
                        "nano"
                    ]
