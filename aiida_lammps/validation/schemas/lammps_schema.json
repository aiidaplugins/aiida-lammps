            },
            "newton": {
                "type": "string",
                "propertyNames": {
                    "enum": ["on", "off"]
                }
            },
            "processors": {
                "type": "string"
            },
            "timestep": {
                "type": "numeric"
            }
        }
    },
    "potential": {
        "type": "object",
        "properties": {
            "potential_style_options": {
                "type": "array"
            },
            "neighbor": {
                "type": "array"
            },
            "neighbor_modify": {
                "type": "array"
            }
        }
    },
    "structure": {
